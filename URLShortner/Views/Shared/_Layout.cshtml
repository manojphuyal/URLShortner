<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/toastr/css")

    @Scripts.Render("~/bundles/modernizr")

    <style>
        .shadow-box {
            box-shadow: 0 0 10px 10px rgb(0 85 85 / 19%);
            border-radius: 4px;
            padding: 20px;
            background-color: #fff;
            /*                width: 80%;
        */ max-width: 100%;
            height: 185px;
            max-height: 200px;
        }

        #formurl {
            display: table;
            max-width: 600px;
            margin: 0 auto;
        }

            #formurl input[type=text] {
                display: table-cell;
                width: 100%;
                height: 56px;
                padding: 10px 16px;
                font: 17px lato,arial;
                color: #000;
                background: #fff;
                border: 1px solid #bbb;
                border-right: 0;
                border-radius: 3px;
                border-bottom-right-radius: 0;
                border-top-right-radius: 0;
                box-sizing: border-box;
            }

            #formurl #formbutton {
                display: table-cell;
                width: 1%;
                box-sizing: border-box;
                vertical-align: middle;
            }

            #formurl input[type=button], #formurl a {
                height: 56px;
                padding: 18px 16px;
                font: bold 17px lato,arial;
                color: #fff;
                background-color: #00b8ed;
                text-align: center;
                vertical-align: middle;
                cursor: pointer;
                white-space: nowrap;
                border: 0;
                border-radius: 3px;
                border-top-left-radius: 0;
                border-bottom-left-radius: 0;
                margin-left: -1px;
                -webkit-appearance: button;
                margin: 0;
                text-decoration: none;
            }

        body {
            background: #f9f9f9;
        }
        nav.navbar.navbar-expand-sm.navbar-toggleable-sm.navbar-dark {
            background: #4ea9c4;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div class="container">
            @Html.ActionLink("URL Shortner", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/toastr/js")
    @RenderSection("scripts", required: false)
</body>
</html>
